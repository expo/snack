{
  "name": "@expo/snack",
  "private": true,
  "author": "Expo",
  "license": "MIT",
  "volta": {
    "node": "16.14.2"
  },
  "scripts": {
    "start": "turbo build --filter '{./packages/snack-term}...' && yarn --cwd ./packages/snack-term start",
    "lint": "turbo lint --filter './packages/*' --",
    "test": "turbo test --filter './packages/*' --",
    "build": "turbo build --filter './packages/*' --"
  },
  "workspaces": {
    "packages": [
      "packages/snack-content",
      "packages/snack-proxies",
      "packages/snack-require-context",
      "packages/snack-sdk",
      "packages/snack-term",
      "website",
      "snackager",
      "snackpub"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chalet": "^0.9.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.12.0",
    "eslint-config-universe": "^10.0.0",
    "prettier": "^2.6.2",
    "turbo": "^1.10.13"
  }
}
