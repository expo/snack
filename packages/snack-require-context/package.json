{
  "name": "snack-require-context",
  "version": "0.1.0",
  "description": "A Snack-compatible implementation of `require.context`",
  "main": "./build/runtime.js",
  "types": "./build/runtime.d.ts",
  "typesVersions": {
    "*": {
      "snackager": [
        "./build/snackager.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./build/runtime.js",
      "types": "./build/runtime.d.ts"
    },
    "./snackager": {
      "require": "./build/snackager.js",
      "types": "./build/snackager.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "build",
    "snackager.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/expo/snack.git",
    "directory": "packages/snack-require-context"
  },
  "bugs": {
    "url": "https://github.com/expo/snack/issues"
  },
  "author": "Expo <support@expo.dev>",
  "license": "MIT",
  "volta": {
    "node": "20.19.4"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "clean": "git clean -xdf ./build",
    "dev": "tsc --watch",
    "build": "tsc",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/types": "^7.12.7",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^26.0.20",
    "eslint": "^8.49.0",
    "eslint-config-universe": "^12.0.0",
    "jest": "^26.6.3",
    "prettier": "^3.0.3",
    "ts-jest": "^26.5.0",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": "universe/node",
    "ignorePatterns": [
      "build"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": true,
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "./src"
  }
}
